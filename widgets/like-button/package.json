{
  "name": "@recodable/like-button-widget",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production preact build --no-prerender --clean --service-worker false",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "dev:api": "nodemon src/api.js",
    "lint": "eslint src",
    "test": "jest",
    "dist": "yarn build && cp README.md build && cd build && yarn publish"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "nodemon": "^2.0.6",
    "preact-cli": "^3.0.0",
    "sirv-cli": "1.0.3"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "dotenv": "^8.2.0",
    "framer-motion": "^2.9.4",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "pouchdb": "^7.2.2",
    "preact": "^10.3.2",
    "preact-habitat": "^3.3.0",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "whatwg-fetch": "^3.5.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
